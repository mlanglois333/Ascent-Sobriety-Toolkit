{{!-- Resource Card --}}
<div class="resource-article card">
    {{!-- Title --}}
    <div class="card-title">
        <h4 class="text-center article-title">{{ this.title }}</h4>
    </div>
    {{!-- Description & Button --}}
    <div class="card-text main-content">
        <p class="article-description text-center">{{ this.description }}</p>
        <a class="btn btn-outline-light" class="btn article-btn" href="{{ this.link }}">Learn More</a>
    </div>
</div>